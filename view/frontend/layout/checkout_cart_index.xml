<?xml version="1.0"?>
<!--
/**
 * Add message 'discount_message' before Order Total
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="discount_message" xsi:type="array">
                                    <item name="component"  xsi:type="string">Dyson_AmastyCheckoutExtension/js/view/checkout/summary/discount_message_coupon</item>
                                    <item name="sortOrder" xsi:type="string">30</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Dyson_AmastyCheckoutExtension/checkout/summary/discount_message_coupon</item>
                                        <item name="title" xsi:type="string" translate="true">Coupon code</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
