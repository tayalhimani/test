        <en-AE>
            <dyson_singlepagecheckout>
                <telephone>
                    <telephone_message_enabled>1</telephone_message_enabled>
                    <telephone_message>Please provide your 10-digit phone number to process your order</telephone_message>
                </telephone>
            </dyson_singlepagecheckout>
        </en-AE>
        <ar-SA>
            <dyson_singlepagecheckout>
                <telephone>
                    <telephone_message_enabled>1</telephone_message_enabled>
                    <telephone_message>يرجى تقديم رقم هاتفك المكون من 10 أرقام لمعالجة طلبك</telephone_message>
                </telephone>
            </dyson_singlepagecheckout>
        </ar-SA>
        <en-SA>
            <dyson_singlepagecheckout>
                <telephone>
                    <telephone_message_enabled>1</telephone_message_enabled>
                    <telephone_message>Please provide your 10-digit phone number to process your request</telephone_message>
                </telephone>
            </dyson_singlepagecheckout>
        </en-SA>
    </stores>
</config>
